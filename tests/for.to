// For looping preserves reference

o := {name: var "Bob"}

l := [o]

for e in l do {
    e.name = "Susan"
}

println(o.name)

// You don't have to loop over an array
// as long as it has .size and .at()

fakeArray := scope {
    size := 10

    fn at(i: int) -> i - 3
}

for n in fakeArray do {
    println(n$)
}

